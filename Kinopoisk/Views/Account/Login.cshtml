@model Kinopoisk.Models.LoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">

    <div class="row justify-content-center">
        <div class="input-card">
            <h1 class="text-center">Вход</h1>
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="card-body">

                    <div class="form-group">
                        <label for="loginInput">Введите Логин</label>
                        <input type="text" asp-for="Login" class="form-control" id="loginInput" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">Логин может быть любым.</small>
                    </div>
                    <div class="form-group">
                        <label for="PasswordInput">Пароль</label>
                        <input type="password" asp-for="Password" class="form-control" id="PasswordInput">
                    </div>
                    <input class="btn btn-primary" type="submit" id="submitLogin" value="Войти" />

                </div>
            </form>
        </div>
    </div>
</div>
