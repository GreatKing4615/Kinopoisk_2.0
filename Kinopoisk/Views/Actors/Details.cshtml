@model Kinopoisk.Domain.Core.Actor

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h2>Подробнее об актере: @Model.Name</h2>
    <div class="card shadow mb-3">
        <div class="row  p-4">
            <div class="col-md-4">
                <img src="@Model.PhotoPath" class="card-img-top img-fluid img-thumbnail" alt="...">
                <div class="card-img mt-2 text-center">
                    <div class="clearfix text-center">

                        <p class=" text-center">
                            <span class="p2-8 ml-1 text-center">❤@Model.Rating</span>
                        </p>
                    </div>

                </div>

            </div>
            <div class="col-md-8">
                <div class="card-body ">
                    <div class="row">
                        <div class="col-4">
                            <div class="list-group text-center" id="list-tab" role="tablist">
                                <a class="list-group-item list-group-item-action active" id="list-home-list"
                                   data-toggle="list" href="#list-home" role="tab"
                                   aria-controls="home">Описание</a>

                                <a class="list-group-item list-group-item-action" id="birth"
                                   data-toggle="list" href="#list-data1" role="tab"
                                   aria-controls="profile">День рождения</a>

                                <a class="list-group-item list-group-item-action" id="list-profile-list"
                                   data-toggle="list" href="#list-profile" role="tab"
                                   aria-controls="profile">Фильмография</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="row">

                                        <div class="col-4 m-3">
                                            <form method="post" action="~/Actors/Like" class="mt-3" enctype="multipart/form-data">
                                                <input type="hidden" name="Id" value="@Model.Id" asp-page="Movies/Edit" />
                                                <button type="submit" class="list-group-item  btn"  role="tab" aria-controls="profile">
                                                    👍🏻
                                                </button>

                                                <!--Создаём скрытое поле для параметра ID-->

                                            </form>
                                        </div>
                                        <div class="col-2 m-3">
                                            <form method="post" class="mt-3" action="~/Actors/Dislike" enctype="multipart/form-data">
                                                <input type="hidden" name="Id" value="@Model.Id" asp-page="Movies/Edit" />
                                                <button type="submit" class="list-group-item  btn" role="tab" aria-controls="profile">
                                                    👎🏻
                                                </button>

                                            </form>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <button class="btn btn-secondary" data-container="body" data-toggle="popover" data-placement="bottom"
                                            data-content="Вам необходимо авторизоваться
                                            чтобы проголосовать">
                                        Оценить
                                    </button>
                                }




                            </div>
                        </div>

                        <div class="col-8">
                            <div class="tab-content" id="nav-tabContent">

                                <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                                     aria-labelledby="list-home-list">@Model.Bio</div>

                                    <div class="tab-pane fade" id="list-data1" role="tabpanel"
                                         aria-labelledby="birth">
                                        Дата рождения: @Model.Birthday.ToShortDateString()
                                    </div>

                                    <div class="tab-pane fade" id="list-profile" role="tabpanel"
                                         aria-labelledby="list-profile-list">

                                        @foreach (var movie in Model.Movies)
                                        {
                                            <div class="container">
                                                <div class="card shadow mb-3">
                                                    <div class="row  p-4">
                                                        <div class="col-md-4">
                                                            <img src="@movie.Movie.PhotoPath" class="card-img-top img-fluid img-thumbnail" alt="...">

                                                            <div class="card-img mt-2">
                                                                <p class="float-left">

                                                                    <i class="fas fa-heart"></i>

                                                                    <span class="p2-8 ml-1">❤@movie.Movie.Rating</span>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-4">

                                                            <div class="card-img mt-2">
                                                                <p>@movie.Movie.Name</p>
                                                            </div>
                                                            <a href="@Url.Action("Details","Movies",new {id=movie.ActorId })" class="btn btn-primary">Подробнее</a>

                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script>
    $(function () {
        $('[data-toggle="popover"]').popover()
    })
        </script>
    }